<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="styles.css">
  <script src="script.js" defer></script>
  <title>Cards</title>
</head>
<body>
  <%- include('partials/header'); %>
  <div class="container">
    <h1><%= discordTag %> cards</h1>
    <button id="saveDeckButton">Save</button>
  </div>
  <div class="container" id="inventoryID">
    <h2>Inventory</h2>
    <% inventory.forEach(card => { %>
      <img src="https://d2yhutf68q06qd.cloudfront.net/cards_full/<%= card %>.jpg" alt="<%= card %>" class="draggable resized-image" draggable="true">
    <% }); %>
  </div>
  <div class="container" id="maindeckID">
    <h2>Main Deck</h2>
    <% maindeck.forEach(card => { %>
      <img src="https://d2yhutf68q06qd.cloudfront.net/cards_full/<%= card %>.jpg" alt="<%= card %>" class="draggable resized-image" draggable="true">
    <% }); %>
  </div>
  <div class="container" id="extradeckID">
    <h2>Extra Deck</h2>
    <% extradeck.forEach(card => { %>
      <img src="https://d2yhutf68q06qd.cloudfront.net/cards_full/<%= card %>.jpg" alt="<%= card %>" class="draggable resized-image" draggable="true">
    <% }); %>
  </div>
  <div class="container" id="sidedeckID">
    <h2>Side Deck</h2>
    <% sidedeck.forEach(card => { %>
      <img src="https://d2yhutf68q06qd.cloudfront.net/cards_full/<%= card %>.jpg" alt="<%= card %>" class="draggable resized-image" draggable="true">
    <% }); %>
  </div>
  <div class="enlarged-image-overlay">
    <img class="enlarged-image" alt="Enlarged Image">
    <span class="close-button"></span>
  </div>

</body>
</html>